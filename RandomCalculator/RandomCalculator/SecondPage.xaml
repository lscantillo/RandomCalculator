<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomCalculator.SecondPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label x:Name="titulo" />
            <Label x:Name="number1"/>
            <Label x:Name="operacion"/>
            <Label x:Name="number2"/>
            <Entry x:Name="etresultado" Placeholder="Resultado" Keyboard="Numeric" ></Entry>
            <Button x:Name="btnresultado" Text="Respuesta" Clicked="Clickrespuesta"></Button>           

        </StackLayout>
    </ContentPage.Content>
</ContentPage>